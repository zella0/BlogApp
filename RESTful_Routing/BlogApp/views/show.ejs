<% include ./partials/header.ejs %> 

<div class="ui main text container segment">
  <div class="ui huge header"><%= foundBlog.title %></div>
      <div class = 'ui top attached segment'>
          <div class = 'item'>
            <img class = 'ui centered rounded image' src ="<%= foundBlog.image %>">
            <h5><%= foundBlog.created.toDateString() %></h5>
            <div class = 'description'>
                <h5><%- foundBlog.body %></h5>
            </div>
            <h3>
            <a class = 'ui orange basic button' href ='/blogs/<%= foundBlog.id %>/edit/'>Edit</a>
            <form action ='/blogs/<%= foundBlog.id %>?_method=DELETE' method ="POST" id ='editAndDelete'>
              <button class = 'ui red basic button'>Delete</button>
            </form>
            </h3>
          </div>
      </div>
</div>

<% include ./partials/footer.ejs %> 