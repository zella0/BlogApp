<% include ./partials/header.ejs %> 

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= editedBlog.title %></div>
  <form class = 'ui form' action = '/blogs/<%= editedBlog.id %>?_method=PUT' method = 'POST'>
    <div class = 'field'>
      <label>Title</label>
      <input type = 'text' name = 'blog[title]' placeholder='title' value = "<%= editedBlog.title%>" >
    </div>
    
     <div class = 'field'>
      <label>Image</label>
      <input type = 'text' name = 'blog[image]' placeholder='image' value = "<%= editedBlog.image%>">
    </div>
    
     <div class = 'field'>
      <label>Blog Content</label>
      <textarea name = 'blog[body]'> <%=editedBlog.body%> </textarea>
    </div>
    <input class="ui purple basic big button" type ='submit'>
  </form>
</div>

<% include ./partials/footer.ejs %> 