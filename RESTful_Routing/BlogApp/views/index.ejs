<% include ./partials/header.ejs %> 

<div class = 'ui main text container'>
    <div class = 'ui top attached segment'>
        <div class = 'ui divided items'>
            <% blogs.forEach(function(output){ %>
            <div class = 'item'>
                <div class = 'image'>
                    <img src = "<%= output.image %>">
                </div>
                <div class = 'content'>
                    <a class = 'header' href = '/blogs/<%=output.id%>'><%= output.title %></a>
                    <div class = 'meta'>
                        <span><%= output.created.toDateString() %></span>
                    </div>
                    <div class = 'description'>
                        <% if (output.body && output.body.length > 0) { %>
                        <h4><%- output.body.substring(0,100) %>...</h4>
                        <% } %>
                    </div>
                    <div class = 'extra'>
                        <a class = 'ui floated basic violet button' href = '/blogs/<%=output.id%>'>Read More</a>
                    </div>
                </div>
            </div>
                 <% }) %>
        </div>
    </div>
</div>

